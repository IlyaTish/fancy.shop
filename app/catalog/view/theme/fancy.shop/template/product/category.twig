              <i class="fas fa-star"></i>
            </div>
            <span class="product-item__price">12 600 Р.</span>
            <button class="product-item__btn btn">в корзину</button>
          </div>
          <div class="product-item">
            <div class="product-item__tag">
              <span>
                -20%
                <div class="flag"></div>
              </span>
            </div>
            <a href="" class="product-item__img-cont">
              <img class="product-item__img" src="catalog/view/theme/fancy.shop/img/common/popular/baby-carriage.jpg" alt="">
            </a>
            <h3 class="product-item__title">Bartollino Adbor</h3>
            <div class="product-item__rate">
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="far fa-star"></i>
            </div>
            <div class="product-item__price">
              <span class="product-item__price-current">16 500 Р.</span>
              <span class="product-item__price-prev">16 500 Р.</span>
            </div>
            <button class="product-item__btn btn">в корзину</button>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{ content_bottom }}
</div>
{{ footer }}

<script>
$(document).ready(function() {
  $('.cat-list__title').on('click', function() {
    /* Act on the event */
    var $this   = $(this),
        catList = $this.parent().find('.cat-list')

    $this.toggleClass('cat-list__title--active');
    catList.toggleClass('cat-list--active');
  });
});
</script>
