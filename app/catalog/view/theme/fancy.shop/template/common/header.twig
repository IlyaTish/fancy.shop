              <path fill-rule="evenodd" clip-rule="evenodd" d="M19.454 3.98129L1.85244 3.98129C1.59455 3.98129 1.444 4.01607 1.51952 4.25706L4.20219 12.8984C4.27623 13.1349 4.47846 13.4221 4.65535 13.4221L16.6511 13.4221C16.8275 13.4221 17.0287 13.0628 17.1043 12.8218L19.7869 4.34253C19.8615 4.10601 19.7134 3.98129 19.454 3.98129V3.98129Z" stroke="#424242" stroke-width="2"/>
              <path d="M19.8062 3.91059L20.7214 1.61301" stroke="#424242" stroke-width="2" stroke-linecap="round"/>
              <path d="M16.6026 13.314C16.7716 13.314 16.9649 13.5048 17.0374 13.7492L18.4332 17.5454" stroke="#424242" stroke-width="2" stroke-linecap="round"/>
              <path d="M23.4227 1L20.9383 1" stroke="#424242" stroke-width="2" stroke-linecap="round"/>
              <path d="M18.4537 17.894L4.04412 17.894" stroke="#424242" stroke-width="2" stroke-linecap="round"/>
            </svg>
            <span>корзина</span>
          </a>
        </div>
      </div>
    </div>

    <div class="header-bottom">
      <div class="header-bottom__cont">
        <nav class="header-bottom__nav">
          <ul class="header-bottom__list">
            <li class="header-bottom__list__item">
              <a class="header-bottom__list__link" href="#">Доставка</a>
            </li>
            <li class="header-bottom__list__item">
              <a class="header-bottom__list__link" href="#">Гарантия</a>
            </li>
            <li class="header-bottom__list__item">
              <a class="header-bottom__list__link" href="#">О нас</a>
            </li>
            <li class="header-bottom__list__item">
              <a class="header-bottom__list__link" href="#">Контакты</a>
            </li>
          </ul>
        </nav>

        <div class="header-bottom__social">
          <div class="header-bottom__social__overlay"></div>
        </div>
      </div>
    </div>
  </header>